<%- include ('../../partials/header.ejs'); %>
<%- include ('../../partials/homenavbar.ejs'); %>
<body>
    <div class="container">
        <br>
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %>">Read article</a>
                </div>
            </div><br>
        <% }) %>

        <div class="row"></div>
            <div class="col col-12">
                <% if (result.page > 2) { %>
                    <a style="float: left;" href="/articles/page/<%= result.page - 1 %>"><<< Prev</a>
                <% } %>
                <% if (result.page == 2) { %>
                    <a style="float: left;" href="/"><<< Prev</a>
                <% } %>

                <% if (result.next) { %>
                    <a style="float: right;" href="/articles/page/<%= result.page + 1 %>">Next >>></a>
                <% } %>
            </div>
            <br>
        </div>
        <br>
    </div>
</body>
<%- include ('../../partials/footer.ejs'); %>
